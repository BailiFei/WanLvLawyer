<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View android:layout_width="match_parent" android:layout_height="1px"
          android:background="#D9D9D9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_14"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/dot_green_22"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="填写信息"
                android:textColor="#ff23a94c"
                android:textSize="@dimen/sp_9"
            />
        </LinearLayout>
        <View android:layout_width="0dp"
              android:layout_height="1px"
              android:layout_marginStart="@dimen/dp_5"
              android:layout_marginTop="@dimen/dp_11"
              android:layout_marginEnd="@dimen/dp_5"
              android:layout_weight="1"
              android:background="#D9D9D9"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/dot_green_22"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="上传材料认证"
                android:textColor="#ff23a94c"
                android:textSize="@dimen/sp_9"
            />
        </LinearLayout>
        <View android:layout_width="0dp"
              android:layout_height="1px"
              android:layout_marginStart="@dimen/dp_5"
              android:layout_marginTop="@dimen/dp_11"
              android:layout_marginEnd="@dimen/dp_5"
              android:layout_weight="1"
              android:background="#D9D9D9"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_13"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/dot_green_22"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="提交审核"
                android:textColor="#ff23a94c"
                android:textSize="@dimen/sp_9"
            />
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="@dimen/dp_88"
               android:layout_height="@dimen/dp_88"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/dp_60"
               android:scaleType="centerInside"
               android:src="@mipmap/ic_apply_success"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_38"
        android:text="您的信息已提交系统审核"
        android:textColor="#ff000000"
        android:textSize="@dimen/sp_15"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:text="我们会在1-3个工作日内给您反馈，请耐心等待！"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_14"
    />
    <TextView
        android:layout_width="match_parent" android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_22"
        android:background="@drawable/bg_btn_green_radius_22"
        android:gravity="center"
        android:text="返回首页"
        android:id="@+id/tv_back"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
    />
</LinearLayout>