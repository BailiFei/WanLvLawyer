<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm" type="com.lawyer.controller.apply.FirstViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View android:layout_width="match_parent" android:layout_height="1px"
              android:background="#D9D9D9"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@drawable/dot_green_22"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="填写信息"
                    android:textColor="#ff23a94c"
                    android:textSize="@dimen/sp_9"
                />
            </LinearLayout>
            <View android:layout_width="0dp"
                  android:layout_height="1px"
                  android:layout_marginStart="@dimen/dp_5"
                  android:layout_marginTop="@dimen/dp_11"
                  android:layout_marginEnd="@dimen/dp_5"
                  android:layout_weight="1"
                  android:background="#D9D9D9"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@drawable/dot_gray_22"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="上传材料认证"
                    android:textColor="#D9D9D9"
                    android:textSize="@dimen/sp_9"
                />
            </LinearLayout>
            <View android:layout_width="0dp"
                  android:layout_height="1px"
                  android:layout_marginStart="@dimen/dp_5"
                  android:layout_marginTop="@dimen/dp_11"
                  android:layout_marginEnd="@dimen/dp_5"
                  android:layout_weight="1"
                  android:background="#D9D9D9"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_13"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@drawable/dot_gray_22"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="提交审核"
                    android:textColor="#D9D9D9"
                    android:textSize="@dimen/sp_9"
                />
            </LinearLayout>
        </LinearLayout>
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="真实姓名"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={vm.bean.name}"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:background="@color/white"
                              android:layout_marginTop="@dimen/dp_10"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="身份证号"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入身份证号"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={vm.bean.idCardNo}"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="性别"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onCheckedChanged="@{vm::onCheckedChanged}"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/rd_male"
                            android:gravity="center_vertical"
                            android:text="男"
                            android:textColor="#45494B"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/rd_female"
                            android:gravity="center_vertical"
                            android:text="女"
                            android:textColor="#45494B"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="QQ"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入QQ"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned"
                        android:maxLines="1"
                        android:text="@={vm.bean.qqId}"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="常用邮箱"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入常用邮箱"
                        android:imeOptions="actionNext"
                        android:text="@={vm.bean.email}"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="微信"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入微信"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:text="@={vm.bean.wechatId}"
                        android:maxLines="1"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="执业证号"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入执业证号"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={vm.bean.licenseNo}"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="执业律所"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="@={vm.bean.lawfirmName}"
                        android:hint="请输入执业律所"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="律所地址"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入律所地址"
                        android:imeOptions="actionNext"
                        android:text="@={vm.bean.address}"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="工作地点"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:onClick="@{vm::cityClick}"
                        android:background="@null"
                        tools:text="@string/app_name"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:id="@+id/tv_city"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="@dimen/dp_20"
                               android:src="@mipmap/ic_right_gray"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="第一专长"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        tools:text="@string/app_name"
                        android:tag="1"
                        android:text="@{vm.bean.skillFirstName}"
                        android:onClick="@{vm::caseTypeClick}"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="@dimen/dp_20"
                               android:src="@mipmap/ic_right_gray"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="第二专长"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        tools:text="@string/app_name"
                        android:text="@{vm.bean.skillSecondName}"
                        android:maxLines="1"
                        android:tag="2"
                        android:onClick="@{vm::caseTypeClick}"
                        android:textColor="#ff45494b"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="@dimen/dp_20"
                               android:src="@mipmap/ic_right_gray"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_44"
                              android:layout_marginTop="@dimen/dp_10"
                              android:background="@color/white"
                              android:focusable="true"
                              android:focusableInTouchMode="true"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/dp_107"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_24"
                        android:text="第三专长"
                        android:textColor="#ff45494b"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="@{vm.bean.skillThirdName}"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        tools:text="@string/app_name"
                        android:textColor="#ff45494b"
                        android:tag="3"
                        android:onClick="@{vm::caseTypeClick}"
                        android:textColorHint="#CCCCCC"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/sp_15"
                    />
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="@dimen/dp_20"
                               android:src="@mipmap/ic_right_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_25"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <CheckBox android:layout_width="@dimen/dp_12"
                              android:layout_height="@dimen/dp_12"
                              android:background="@drawable/bg_cb_green"
                              android:button="@null"
                              android:id="@+id/check_box"
                              android:checked="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:text="我已阅读并同意"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/sp_12"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《万律网络服务协议》"
                        android:textColor="#16AA47"
                        android:textSize="@dimen/sp_12"
                    />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_44"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:background="@drawable/bg_btn_green_radius_22"
                    android:gravity="center"
                    android:text="下一步"
                    android:onClick="@{vm::onCommit}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>